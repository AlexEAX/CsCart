<?xml version="1.0"?>
<addon scheme="3.0">
    <id>retargeting</id>
    <version>1.2</version>
    <priority>3000</priority>
    <position>300</position>
	<version>4.4.x-4.9.x</version>
    <status>active</status>
    <auto_install>MULTIVENDOR,ULTIMATE</auto_install>
    <name>Retargeting Tracker and Products feed</name>
    <description>Boost the conversion rate and sales of your online store with Reatergeting intergration.</description>
    <priority>20333</priority>
	<supplier>Retargeting.biz</supplier>
    <supplier_link>http://www.retargeting.biz</supplier_link>
    <authors>
        <author>
            <name>Retargeting.biz</name>
            <email>info@retargeting.biz</email>
            <url>http://www.retargeting.biz</url>
        </author>
    </authors>
    <settings edition_type="ROOT,ULT:VENDOR">
        <sections>
            <section id="general">
                <name>Retargeting Tracker Basic Settings</name>
                <items>
                    <item id="header">
                        <type>header</type>
                        <name>Retargeting Tracking Code</name>
                    </item>
                    <item id="retargeting_domain_api">
                        <name>Tracking API Key</name>
                        <type>input</type>
                    </item>
                    <item id="retargeting_discounts_api">
                        <name>REST API Key</name>
                        <type>input</type>
                    </item>
                    <item id="help_pages">
                        <name>Help Pages</name>
                        <type>input</type>
                    </item>
                    <item id="cart_url">
                        <name>Cart URL</name>
                        <type>input</type>
                    </item>
                </items>
            </section>
            <section id="configuration">
                <name>Retargeting Tracker Options</name>
                <items>
                    <item id="header">
                        <type>header</type>
                        <name>JavaScript Query Selectors [Experimental]</name>
                    </item>
                    <item id="retargeting_qs_addToCart">
                        <name>Add To Cart Button</name>
                        <type>input</type>
                        <default_value>[id^="button_cart_"]</default_value>
                    </item>
                    <item id="retargeting_qs_variation">
                        <name>Product Variants Buttons</name>
                        <type>input</type>
                        <default_value>[id^='option_']</default_value>
                    </item>
                    <item id="retargeting_qs_addToWishlist">
                        <name>Add To Wishlist Button</name>
                        <type>input</type>
                        <default_value>[id^="button_wishlist_"]</default_value>
                    </item>
                    <item id="retargeting_qs_productImages">
                        <name>Product Images</name>
                        <type>input</type>
                        <default_value>.ty-previewer</default_value>
                    </item>
                    <item id="retargeting_qs_review">
                        <name>Submit Review Button</name>
                        <type>input</type>
                        <default_value></default_value>
                    </item>
                    <item id="retargeting_qs_price">
                        <name>Product Price</name>
                        <type>input</type>
                        <default_value></default_value>
                    </item>
                    <item id="retargeting_qs_oldPrice">
                        <name>Product Old Price</name>
                        <type>input</type>
                        <default_value></default_value>
                    </item>
                </items>
            </section>
            <section id="products_import">
                <name>Retargeting Products Import</name>
                <items>
                    <item id="retargeting_products">
						<type>template</type>
						<default_value>retargeting.tpl</default_value>
					</item>
                </items>
            </section>
        </sections>
    </settings>
    <queries>
        <item>ALTER TABLE `?:products` ADD `retargeting` CHAR(1) NOT NULL DEFAULT 'Y';</item>
		<item>ALTER TABLE `?:categories` ADD `retargeting` CHAR(1) NOT NULL DEFAULT 'Y';</item>
		<item for="uninstall">ALTER TABLE `?:products` DROP `retargeting`;</item>
		<item for="uninstall">ALTER TABLE `?:categories` DROP `retargeting`;</item>
	</queries>
</addon>
